@model Domain.Models.UserModel

<div class="row">
	<div class="col-lg-4">
		<div class="card mb-4">
			<div class="card-body text-center">
				<img src=@(Model.ProfilePictureUrl != null ? Model.ProfilePictureUrl : "/assets/profile_pictures/default.jpeg") alt="avatar"
					 class="rounded-circle img-fluid" style="width: 150px;">
				<h5 class="my-3">@Model.LastName @Model.FirstName</h5>
				<p class="text-muted my-3">@Model.UserName</p>
				<div class="d-flex justify-content-center mb-2">
					<button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary" onclick="openEditProfileDataModal()">Редактировать профиль</button>
				</div>
				<div class="d-flex justify-content-center mb-2">
					<button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary" onclick="changeProfilePicture()">Сменить аватар</button>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-8">
		<div class="card mb-4">
			<div class="card-body">
				<div class="row">
					<div class="col-sm-3">
						<p class="mb-0">Полное имя</p>
					</div>
					<div class="col-sm-9">
						<p class="text-muted mb-0">@Model.LastName @Model.FirstName @Model.MiddleName
					</div>
				</div>
				<hr>
				<div class="row">
					<div class="col-sm-3">
						<p class="mb-0">Адрес электронной почты</p>
					</div>
					<div class="col-sm-9">
						<p class="text-muted mb-0">@Model.Email</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
